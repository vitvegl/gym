start transaction;

call set_athlet_id ('<%= @athlet %>');

insert into `workout` (`workout_date`, `workout_duration`, `athlet_id`)
  values
('<%= @date %>', '<%= @duration %>', (select @athlet_id));

call set_workout_id ('<%= @athlet %>', '<%= @date %>');

/* <%= @workout_type %> */
insert into `workout_type` (`wtype`) value ('<%= @workout_type %>');

insert into `exercise` (`description`, `weight_kg`, `reps`, `rest_time_sec`, `workout_id`)
  values
(null, null, null, (select @workout_id));

set @workout_id = null;

create view exercise_id as select e.id from exercise e
  join workout w on e.workout_id = w.id
  join athlet a on w.athlet_id = a.id
where a.nickname = '<%= @athlet %>'
  and w.workout_date = '<%= @date %>';

/* <%= @style %> */
<% if @style === "без екіпірування" %>insert into `style` (`id`) select id from exercise_id;
<% else %>insert into `style` (`id`, `equipment`) select id, '<%= @style %>' from exercise_id;
<% end %>
/* <%= @equipment %> */
<% if @equipment === "гантелі" %>insert into `equipment` (`id`) select id from exercise_id;
<% else %>insert into `equipment` (`id`, `equipment`) select id, '<%= @equipment %>' from exercise_id;
<% end %>
call update_exercise_if_no_weight ('<%= @athlet %>', '<%= @date %>');

drop view exercise_id;

commit;
